{
  "name": "kodbankapp",
  "version": "1.0.0",
  "description": "Banking simulation app",
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "install:all": "cd api && npm install && cd ../frontend && npm install",
    "start:backend": "cd api && npm start",
    "start:frontend": "cd frontend && npm run dev",
    "dev": "npm-run-all --parallel start:backend start:frontend",
    "install:backend": "cd api && npm install",
    "install:frontend": "cd frontend && npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}